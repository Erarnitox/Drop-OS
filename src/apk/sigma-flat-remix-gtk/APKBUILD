options="!check"
source="flat-remix-gtk-green-dark.tar.xz"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir/usr/share/themes"
	mv "$srcdir/Flat-Remix-GTK-Green-Darkest-Solid/" "$pkgdir/usr/share/themes/"
}

