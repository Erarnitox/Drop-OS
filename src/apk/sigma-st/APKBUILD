# Contributor: Rdbo
# Maintainer: Rdbo <rdbodev@gmail.com>

pkgname="sigma-st"
pkgver="1.0"
pkgrel=0
pkgdesc="suckless st built for Sigma Linux"
url="https://github.com/rdbo/sigma-linux"
arch="all"
license="MIT/X"
depends="libx11 libxft harfbuzz fontconfig freetype"
makedepends="libx11-dev libxft-dev harfbuzz-dev fontconfig-dev freetype-dev"
source="st.tar.gz"
options="!check"

build() {
	make -C "$srcdir/st"
}

package() {
	gzip "$srcdir/st/st.1"
	install -D -m755 "$srcdir/st/st" -t "$pkgdir/usr/bin/"
	install -D -m644 "$srcdir/st/st.1.gz" -t "$pkgdir/usr/share/man/man1/"
}
